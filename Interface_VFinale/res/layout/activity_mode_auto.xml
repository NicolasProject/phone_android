<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.interface_capteur.MainActivity" 
    android:background="@drawable/status_bar_background"
    >

    <TextView
        android:id="@+id/textTitre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/modeauto"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#0099CC" />

    <TextView
        android:id="@+id/textCaptUltra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textCaptAv1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:text="@string/captultra"
        android:textColor="#0099CC" />

    <TextView
        android:id="@+id/Affavg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Affavd"
        android:layout_alignBottom="@+id/Affavd"
        android:layout_alignLeft="@+id/textCaptAv1"
        android:layout_alignRight="@+id/textCaptAv1"
        android:text="@string/nbDef"
        android:textColor="#660000" />

    <TextView
        android:id="@+id/Affarr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Affultras"
        android:layout_below="@+id/textCaptAv3"
        android:layout_marginTop="14dp"
        android:text="@string/nbDef"
        android:textColor="#660000" />

    <TextView
        android:id="@+id/textCaptAv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textCaptAv1"
        android:layout_alignBottom="@+id/textCaptAv1"
        android:layout_alignParentRight="true"
        android:text="@string/captavdroit"
        android:textColor="#0099CC" />

    <TextView
        android:id="@+id/textCaptAv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Affultras"
        android:layout_marginTop="40dp"
        android:text="@string/captavg"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#0099CC" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textCaptUltra"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        android:text="@string/connexion"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/Affavd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textCaptAv2"
        android:layout_marginTop="16dp"
        android:text="@string/nbDef"
        android:textColor="#660000" />

    <TextView
        android:id="@+id/textCaptAv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Affavg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:text="@string/captarriere"
        android:textColor="#0099CC" />

    <TextView
        android:id="@+id/Affultras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/nbDef"
        android:textColor="#660000" />

</RelativeLayout>